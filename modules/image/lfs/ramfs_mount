

set -e

ramfs_mount_point=$(pwd)/ramfs
if ! mount | grep --quiet $ramfs_mount_point; then 
  rm -rf $ramfs_mount_point && mkdir -p $ramfs_mount_point
  sudo mount -t ramfs -o size=20m ramfs $ramfs_mount_point
  sudo chown $USER $ramfs_mount_point
else 
  echo ramfs has already been mounted
  exit 0
fi


